    "jest": "^22.4.2",
    "node-mocks-http": "^1.5.8",
    "nodemailer-stub-transport": "^1.1.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "~22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "typescript": "^2.7.2"

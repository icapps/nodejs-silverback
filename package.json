{
  "name": "nodejs-silverback",
  "version": "1.0.0",
  "description": "NodeJS Silverback boilerplate project",
  "main": "./build/server.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "node ./build/server.js",
    "serve": "npm run build && npm run start",
    "clean": "rimraf ./build",
    "lint": "tslint 'src/**/*.ts'",
    "pretest": "NODE_ENV=test npm run db:migrate",
    "test": "jest --maxWorkers=1 --forceExit",
    "test:coverage": "npm run pretest && jest --coverage --maxWorkers=1 --collectCoverageFrom=src/**/*.ts --forceExit",
    "test:watch": "jest --watchAll",
    "db:seed": "node_modules/knex/bin/cli.js seed:run",
    "db:migrate": "node_modules/knex/bin/cli.js migrate:latest",
    "db:reset": "node_modules/knex/bin/cli.js migrate:rollback && npm run db:migrate && npm run db:seed",
    "heroku-postbuild": "node_modules/typescript/bin/tsc",
    "audit": "node_modules/auditjs/audit.js"
  },
  "precommit": [
    "lint"
  ],
  "dependencies": {
    "@sentry/node": "^4.5.3",
    "camelcase-keys": "~4.2.0",
    "connect-redis": "~3.3.3",
    "dotenv-safe": "~6.0.0",
    "express": "~4.16.2",
    "http-status": "~1.2.0",
    "joi": "~13.5.2",
    "jsonade": "~1.3.0",
    "knex": "~0.15.2",
    "lodash": "~4.17.10",
    "mandrill-api": "~1.0.45",
    "pg": "~7.4.3",
    "redis": "~2.8.0",
    "tree-house": "~3.3.0",
    "tree-house-authentication": "~2.2.1",
    "tree-house-errors": "~1.2.0",
    "tree-house-translations": "~1.1.0",
    "uuid": "~3.3.2",
    "winston": "~3.0.0"
  },
  "devDependencies": {
    "@types/cors": "~2.8.4",
    "@types/dotenv-safe": "~5.0.0",
    "@types/express": "~4.16.0",
    "@types/express-brute": "~0.0.37",
    "@types/faker": "~4.1.2",
    "@types/helmet": "~0.0.38",
    "@types/http-status": "~0.2.30",
    "@types/jest": "~23.3.1",
    "@types/joi": "~13.4.0",
    "@types/knex": "~0.14.19",
    "@types/lodash": "~4.14.115",
    "@types/mandrill-api": "~1.0.30",
    "@types/redis": "~2.8.6",
    "@types/supertest": "~2.0.5",
    "@types/uuid": "~3.4.3",
    "@types/winston": "~2.3.9",
    "auditjs": "^2.4.5",
    "coveralls": "^3.0.2",
    "faker": "^4.1.0",
    "jest": "^23.4.2",
    "node-mocks-http": "^1.7.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0",
    "ts-jest": "~23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^3.0.1"
  },
  "engines": {
    "node": ">=8"
  },
  "author": "iCapps <info@icapps.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/icapps/nodejs-silverback/issues"
  },
  "homepage": "https://github.com/icapps/nodejs-silverback#readme",
  "directories": {
    "test": "tests"
  }
}

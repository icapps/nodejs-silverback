{
  "name": "nodejs-silverback",
  "version": "1.0.0",
  "description": "NodeJS Silverback boilerplate project",
  "main": "./build/server.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "node ./build/server.js",
    "serve": "npm run build && npm run start",
    "clean": "rimraf ./build",
    "lint": "tslint 'src/**/*.ts'",
    "pretest": "NODE_ENV=test npm run db:migrate",
    "test": "jest --maxWorkers=1 --forceExit",
    "test:coverage": "npm run pretest && jest --coverage --maxWorkers=1 --collectCoverageFrom=src/**/*.ts --forceExit",
    "test:watch": "jest --watchAll",
    "db:seed": "node_modules/knex/bin/cli.js seed:run",
    "db:migrate": "node_modules/knex/bin/cli.js migrate:latest",
    "db:reset": "node_modules/knex/bin/cli.js migrate:rollback && npm run db:migrate && npm run db:seed",
    "heroku-postbuild": "node_modules/typescript/bin/tsc"
  },
  "precommit": [
    "lint"
  ],
  "dependencies": {
    "@sentry/node": "~4.6.0",
    "camelcase-keys": "~5.0.0",
    "connect-redis": "~3.4.0",
    "dotenv-safe": "~6.1.0",
    "express": "~4.16.4",
    "http-status": "~1.3.1",
    "joi": "~14.3.1",
    "jsonade": "~1.4.0",
    "knex": "~0.16.3",
    "lodash": "~4.17.11",
    "mandrill-api": "~1.0.45",
    "pg": "~7.8.0",
    "redis": "~2.8.0",
    "tree-house": "~3.4.0",
    "tree-house-authentication": "~3.1.1",
    "tree-house-errors": "~1.2.2",
    "tree-house-translations": "~1.1.3",
    "uuid": "~3.3.2",
    "winston": "~3.2.1"
  },
  "devDependencies": {
    "@types/cors": "~2.8.4",
    "@types/dotenv-safe": "~5.0.3",
    "@types/express": "~4.16.1",
    "@types/express-brute": "~0.0.37",
    "@types/express-session": "~1.15.11",
    "@types/faker": "^4.1.5",
    "@types/helmet": "~0.0.42",
    "@types/http-status": "~0.2.30",
    "@types/jest": "^23.3.13",
    "@types/joi": "~14.3.0",
    "@types/knex": "~0.15.1",
    "@types/lodash": "~4.14.120",
    "@types/mandrill-api": "~1.0.30",
    "@types/redis": "~2.8.10",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "~3.4.4",
    "@types/winston": "~2.4.4",
    "coveralls": "^3.0.2",
    "faker": "^4.1.0",
    "jest": "^24.0.0",
    "node-mocks-http": "^1.7.3",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.3",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.2.4"
  },
  "engines": {
    "node": ">=8"
  },
  "author": "iCapps <info@icapps.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/icapps/nodejs-silverback/issues"
  },
  "homepage": "https://github.com/icapps/nodejs-silverback#readme",
  "directories": {
    "test": "tests"
  }
}

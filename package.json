{
  "name": "OLLIE_PROJECT_NAME",
  "version": "1.0.0",
  "description": "NodeJS project",
  "main": "./build/server.js",
  "scripts": {
    "build": "yarn clean && tsc",
    "start": "node ./build/server.js",
    "serve": "yarn build && yarn start",
    "clean": "rimraf ./build",
    "lint": "tslint 'src/**/*.ts'",
    "postinstall": "node_modules/typescript/bin/tsc",
    "pretest": "NODE_ENV=test yarn db:migrate",
    "test": "jest --forceExit",
    "test:coverage": "jest --coverage --collectCoverageFrom=src/**/*.ts --forceExit",
    "test:watch": "jest --watchAll",
    "db:seed": "node_modules/knex/bin/cli.js seed:run",
    "db:migrate": "node_modules/knex/bin/cli.js migrate:latest"
  },
  "precommit": [
    "lint"
  ],
  "dependencies": {
    "dotenv-safe": "~5.0.1",
    "express": "~4.16.2",
    "http-status": "~1.0.1",
    "jsonade": "~1.1.0",
    "knex": "~0.14.4",
    "lodash": "^4.17.5",
    "nodemailer": "~4.6.3",
    "pg": "~7.4.1",
    "tree-house": "~3.0.3",
    "tree-house-authentication": "~2.0.4",
    "tree-house-errors": "~1.0.1",
    "winston": "~2.4.1"
  },
  "devDependencies": {
    "@types/cors": "~2.8.3",
    "@types/dotenv-safe": "~4.0.1",
    "@types/express": "~4.11.0",
    "@types/faker": "~4.1.2",

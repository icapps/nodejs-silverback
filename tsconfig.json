{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./build",
    "rootDir": "./src",

    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,

    "noImplicitAny": false,
    "allowSyntheticDefaultImports": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tests",
    "build"
  ]
}
